# SMS API Kubernetes Environment Configuration
# Copy this file to .env.k8s and update values for your environment

# Application
APP_NAME="SMS API"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://sms-api.your-domain.com

# Database
DB_CONNECTION=mysql
DB_HOST=mysql-service.sms-app.svc.cluster.local
DB_PORT=3306
DB_DATABASE=sms_api
DB_USERNAME=root
DB_PASSWORD=your-secure-password

# Services
ACADEMIC_URL=http://academic-service.sms-app.svc.cluster.local/gateway
TEACHER_URL=http://teacher-service.sms-app.svc.cluster.local/gateway

# Cache & Sessions
CACHE_DRIVER=redis
SESSION_DRIVER=redis
REDIS_HOST=redis-service.sms-app.svc.cluster.local
REDIS_PORT=6379

# Mail
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# SMS Provider Configuration
SMS_PROVIDER=twilio
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret
SMS_FROM_NUMBER=+1234567890

# Monitoring & Logging
LOG_CHANNEL=stack
LOG_LEVEL=info

# Security
SANCTUM_STATEFUL_DOMAINS=sms-api.your-domain.com
SESSION_SECURE_COOKIE=true

# Performance
OPCACHE_ENABLE=1
OPCACHE_MEMORY_CONSUMPTION=256
OPCACHE_MAX_ACCELERATED_FILES=20000